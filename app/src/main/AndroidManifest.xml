<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.mobiledestroyers.beerme">

    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR"/>
    <application
            android:allowBackup="true"
            android:icon="@drawable/beerme_logo"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme.NoActionBar">
        <activity android:name="com.mobiledestroyers.beerme.activities.UserInfoActivity">
        </activity>
        <activity
                android:name="com.mobiledestroyers.beerme.activities.SignupActivity"
                android:screenOrientation="portrait"
                android:windowSoftInputMode="adjustResize">
        </activity>
        <activity
                android:name="com.mobiledestroyers.beerme.activities.LoginActivity"
                android:screenOrientation="portrait"
                android:windowSoftInputMode="adjustResize">
        </activity>
        <activity
                android:name="com.mobiledestroyers.beerme.activities.StartupActivity"
                android:screenOrientation="portrait"
                android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="com.mobiledestroyers.beerme.activities.BeerMeActivity"
                android:screenOrientation="portrait"
                android:windowSoftInputMode="adjustResize"/>
    </application>

</manifest>