<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.StartupActivity"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/profile_activity"
            android:id="@+id/imageView5"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0" />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/beerme_logo"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.105" />

    <ImageButton
            android:id="@+id/facebook_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/facebook"
            tools:ignore="VectorDrawableCompat"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="128dp"
            android:layout_marginRight="128dp"
            app:layout_constraintTop_toBottomOf="@+id/button2"
            android:layout_marginTop="28dp"></ImageButton>

    <ImageButton
            android:id="@+id/instagram_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/instagram"
            tools:ignore="VectorDrawableCompat"
            app:layout_constraintEnd_toStartOf="@+id/facebook_button"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.825"
            app:layout_constraintTop_toBottomOf="@+id/button2"
            android:layout_marginTop="28dp"></ImageButton>

    <Button
            android:layout_width="150dp"
            android:layout_height="52dp"
            android:text="@string/startup_button_login"
            style="@style/StandardButton"
            android:onClick="onLogin"
            android:id="@+id/button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/imageView5"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginTop="120dp"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"
            app:layout_constraintVertical_bias="0.08" />

    <Button
            android:layout_width="150dp"
            android:layout_height="52dp"
            android:text="@string/startup_button_signup"
            style="@style/StandardButton"
            android:onClick="onSignup"
            android:id="@+id/button2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.081" />


</android.support.constraint.ConstraintLayout>